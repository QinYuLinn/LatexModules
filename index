\usepackage{imakeidx}%设置索引格式的宏包
\makeindex
[
name=InsertName1,
title={InsertTitle1},
intoc=true,
columns=2,%自己设置分栏显示情况
columnsep=1cm,
columnseprule=false,%分栏线
program=makeindex,
noautomatic=false
]
\indexsetup
{
toclevel=section,
firstpagestyle=empty,
%othercode={}将在索引条目生效前的所有代码
}
\makeindex
[
name=InsertName2,
title={InsertTitle2},
intoc=true,
columns=2,%自己设置分栏显示情况
columnsep=1cm,
columnseprule=false,%分栏线
program=makeindex,
noautomatic=false
]